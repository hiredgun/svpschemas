{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "titleFront": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "description": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "descriptionFront": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "displays": {
      "type": [
        "integer",
        "null"
      ]
    },
    "showDisplays": {
      "type": "boolean"
    },
    "created": {
      "type": "integer",
      "minimum": 1
    },
    "updated": {
      "type": "integer",
      "minimum": 1
    },
    "published": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 1
    },
    "flightTimes": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "start": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        },
        "end": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        }
      },
      "required": [
        "start",
        "end"
      ]
    },
    "duration": {
      "type": "integer",
      "minimum": 1
    },
    "assetType": {
      "type": "string",
      "enum": [
        "audio",
        "video"
      ]
    },
    "streamType": {
      "type": "string",
      "enum": [
        "live",
        "wasLive",
        "vod"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "active",
        "inactive",
        "readyToPublish"
      ]
    },
    "playback": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "begin": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        },
        "end": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        }
      },
      "required": [
        "start",
        "end"
      ]
    },
    "series": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "properties": {
        "seasonNumber": {
          "type": "integer",
          "minimum": 1
        },
        "episodeNumber": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "seasonNumber",
        "episodeNumber"
      ]
    },
    "articleUrl": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "category": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "parentId": {
          "type": "integer",
          "minimum": 0
        },
        "showCategory": {
          "type": "boolean"
        },
        "isSeries": {
          "type": "boolean"
        },
        "order": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        },
        "stats": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "ageLimit": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 0
        },
        "lastAsset": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "id"
          ]
        },
        "additional": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "description": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "shortDescription": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "shortPath": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "images": {
              "type": [
                "object",
                "null"
              ],
              "patternProperties": {
                ".*": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "image": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "isImageUploaded": {
              "type": "boolean"
            },
            "logo": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "background": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "backgroundColor": {
              "type": [
                "string",
                "null"
              ],
              "pattern": "^#[a-f0-9A-F]{6}$"
            },
            "showPlayerLogo": {
              "type": "boolean"
            },
            "playerLogoImage": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "trackingCode": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "showEndPoster": {
              "type": "boolean"
            },
            "showComments": {
              "type": "boolean"
            },
            "allowAllDevices": {
              "type": "boolean"
            },
            "adCampaignId": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 3,
              "maxLength": 255
            },
            "autoPlayNextAsset": {
              "type": "boolean"
            },
            "autoPlayNextEmbed": {
              "type": "boolean"
            },
            "notificationMailEnabled": {
              "type": "boolean"
            },
            "metadata": {
              "type": [
                "object",
                "null"
              ],
              "patternProperties": {
                ".*": {
                  "type": "string",
                  "maxLength": 2048
                }
              }
            }
          },
          "required": [
            "description",
            "shortDescription",
            "shortPath",
            "images",
            "image",
            "isImageUploaded",
            "logo",
            "background",
            "backgroundColor",
            "showPlayerLogo",
            "playerLogoImage",
            "trackingCode",
            "showEndPoster",
            "showComments",
            "allowAllDevices",
            "adCampaignId",
            "autoPlayNextAsset",
            "autoPlayNextEmbed",
            "notificationMailEnabled",
            "metadata"
          ]
        }
      },
      "required": [
        "id",
        "title",
        "parentId",
        "showCategory",
        "isSeries",
        "order",
        "stats",
        "ageLimit",
        "lastAsset",
        "additional"
      ]
    },
    "images": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "main": {
          "type": "string",
          "maxLength": 2083
        },
        "front": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 2083
        },
        "snapshots": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 2083
        },
        "featured": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 2083
        }
      },
      "required": [
        "main",
        "front",
        "snapshots",
        "featured"
      ]
    },
    "streamUrls": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hls": {
          "type": "string",
          "maxLength": 2083
        },
        "hds": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 2083
        },
        "mp4": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 2083
        },
        "pseudostreaming": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": [
        "hls",
        "hds",
        "mp4",
        "pseudostreaming"
      ]
    },
    "streamConfiguration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "properties": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "tokenSecured",
              "encrypted",
              "geoblocked",
              "playerVerified"
            ]
          }
        }
      },
      "required": [
        "properties"
      ]
    },
    "additional": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "settings": {
          "type": "object",
          "properties": {
            "showAds": {
              "type": "boolean"
            },
            "showEmbed": {
              "type": "boolean"
            },
            "showComments": {
              "type": "boolean"
            },
            "ageLimit": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 0
            },
            "tonoRegistered": {
              "type": "boolean"
            },
            "createdBy": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 1
            },
            "lastEditedBy": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 2,
              "maxLength": 255
            },
            "source": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 1
            },
            "notes": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 2
            },
            "showInNewest": {
              "type": "boolean"
            },
            "loopGeneratorEnabled": {
              "type": "boolean"
            },
            "escenicId": {
              "type": [
                "string",
                "null"
              ],
              "minLength": 2,
              "maxLength": 255
            },
            "playhead": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 0
            },
            "startIndexPoint": {
              "type": [
                "integer",
                "null"
              ],
              "minimum": 0
            }
          },
          "required": [
            "showAds",
            "showEmbed",
            "showComments",
            "ageLimit",
            "tonoRegistered",
            "createdBy",
            "lastEditedBy",
            "source",
            "notes",
            "showInNewest",
            "loopGeneratorEnabled",
            "escenicId",
            "playhead",
            "startIndexPoint"
          ]
        },
        "chapters": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title": {
                "type": "string",
                "minLength": 3,
                "maxLength": 255
              },
              "description": {
                "type": [
                  "string",
                  "null"
                ],
                "minLength": 3
              },
              "timeline": {
                "type": [
                  "integer",
                  "null"
                ],
                "minimum": 0,
                "maximum": 4294967295
              },
              "featured": {
                "type": "boolean"
              }
            },
            "required": [
              "title",
              "description",
              "timeline",
              "featured"
            ]
          }
        },
        "featuredChapters": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title": {
                "type": "string",
                "minLength": 3,
                "maxLength": 255
              },
              "description": {
                "type": [
                  "string",
                  "null"
                ],
                "minLength": 3
              },
              "timeline": {
                "type": [
                  "integer",
                  "null"
                ],
                "minimum": 0,
                "maximum": 4294967295
              },
              "featured": {
                "type": "boolean"
              }
            },
            "required": [
              "title",
              "description",
              "timeline",
              "featured"
            ]
          }
        },
        "url": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "externalId": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "cuePoints": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "timeline": {
                "type": "integer",
                "minimum": 0,
                "maximum": 4294967295
              }
            },
            "required": [
              "timeline"
            ]
          }
        },
        "sourceFiles": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "width": {
                "type": "integer",
                "minimum": 0
              },
              "height": {
                "type": "integer",
                "minimum": 0
              },
              "bitrate": {
                "type": "integer",
                "minimum": 0
              },
              "sourceFile": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "width",
              "height",
              "bitrate",
              "sourceFile"
            ]
          }
        },
        "externalCategoryId": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 1
        },
        "imageCaption": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "credits": {
                "type": [
                  "string",
                  "null"
                ],
                "minLength": 3,
                "maxLength": 255
              },
              "description": {
                "type": [
                  "string",
                  "null"
                ],
                "minLength": 3
              }
            },
            "required": [
              "credits",
              "description"
            ]
          }
        },
        "nextAsset": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": [
            "id"
          ]
        },
        "subtitles": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "language": {
                "type": "string",
                "minLength": 1
              },
              "default": {
                "type": "boolean"
              },
              "url": {
                "type": "string",
                "maxLength": 2083
              }
            },
            "required": [
              "language",
              "url",
              "default"
            ]
          }
        },
        "originAssetId": {
          "type": [
            "integer",
            "null"
          ],
          "minimum": 1
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "stories": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "access": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            ".*": {
              "type": "boolean"
            }
          }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          }
        }
      }
    },
    "provider": {
      "type": "string",
      "minLength": 1
    },
    "_embedded": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "tag": {
                "type": "string",
                "minLength": 1
              },
              "_links": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "self": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "href": {
                        "type": "string",
                        "minLength": 1
                      }
                    },
                    "required": [
                      "href"
                    ]
                  }
                },
                "required": [
                  "self"
                ]
              }
            },
            "required": [
              "id",
              "tag",
              "_links"
            ]
          }
        }
      },
      "required": [
        "tags"
      ]
    },
    "_links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "self": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "href": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "self"
      ]
    }
  },
  "required": [
    "id",
    "title",
    "titleFront",
    "description",
    "descriptionFront",
    "displays",
    "showDisplays",
    "created",
    "updated",
    "published",
    "flightTimes",
    "duration",
    "assetType",
    "streamType",
    "status",
    "playback",
    "series",
    "articleUrl",
    "category",
    "images",
    "streamUrls",
    "streamConfiguration",
    "additional",
    "provider",
    "_links"
  ]
}
