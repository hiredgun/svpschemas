{
  "id": "https://raw.githubusercontent.com/hiredgun/svpschemas/master/assetsCollection.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "href"
          ]
        },
        "next": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "self"
      ]
    },
    "_embedded": {
      "type": "object",
      "properties": {
        "assets": { "$ref": "asset.json" }
      },
      "required": [
        "assets"
      ]
    },
    "total_items": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "_links",
    "_embedded",
    "total_items"
  ]
}
